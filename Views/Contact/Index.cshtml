@model WAndCAssignment.Models.ContactModel

@{
    ViewBag.Title = "Index";
}

@section Logged{
    @if (@Session["MemberName"] != null)
    {
        <li>
            <a>Welcome @Session["MemberName"]</a>
        </li>
    }
}




<ol class="breadcrumb">
    <li><a href="#">Home</a></li>
    <li><a href="#">About Us</a></li>
    <li><a href="#">Sign Up</a></li>
    <li><a href="#">Products</a></li>
    <li class="active">Contact Us</li>

</ol>


<div id="contact-us">
    <div class="comments">
        <h2 class="text-center">Contact Us</h2>
        <h4 class="text-center text-danger">Your feedback is important</h4>
        <hr />
        @using (Html.BeginForm("Comments", "Contact", FormMethod.Post))
        {
            <span style="color:red">
                @Html.ValidationSummary()
            </span>
            <div class="form-group">
                @Html.LabelFor(x => x.Name)<br />
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" }) <span>(Optional)</span>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Email)
                @Html.TextBoxFor(x => x.Email , new { @class = "form-control" , @required="required"})
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Comments)
                @Html.TextAreaFor(x => x.Comments, new { @rows = 4, @cols = 50,@class="form-control" })
            </div>
                <input id="Submit1" type="submit" value="Send"  class="btn btn-primary"/>
                <input id="Reset1" type="reset" value="Clear"  class="btn btn-success"/>
                }
            </div>
</div>