@model WAndCAssignment.Models.Customers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
   <section id="welcome" class="navbar navbar-inverse">
       <div class="navbar-header">
           <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">

               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
           </button>
       </div><!-- end navbar-header -->
       <div class="collapse navbar-collapse">
           <ul class="nav navbar-nav">
               <li>
                   <a href='@Url.Action("Index","Home")' style="font-size:30px;">Matteo Mart</a>
               </li>
           </ul>
       </div>
       <!-- end collapse -->

   </section>
    <ol class="breadcrumb">
        <li><a href='@Url.Action("Index","Home")'>Back To Home</a></li>
    </ol>
   

    <section id="login-page">
        <div class="row">
            <div class="col-md-7">
                <img src="~/Content/img/thank.png" />
            </div>
            <div class="col-md-5" style="padding-top:60px;">
                <h4 class="text-center">Sign In or <a href='@Url.Action("Register","Customer")'>Register New Account</a></h4>
                <div style="color:red">
                    @Html.ValidationSummary()
                    @ViewData["error"]
                </div>
                @using (Html.BeginForm("Login","Home",FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Username , new { @class="form-control" , placeholder="username", @required = "required" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" , @required="required", placeholder="password"})
                    </div>
                 
                    <input type="submit" class="btn btn-primary btn-block" value="Log In"/>
                    
                }
            </div>
        </div>
    </section>


    @*  === Scripts === *@
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</body>
</html>
